# --- Database ---
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=regulation
DB_USER=readonly_user
DB_PASS=change_me_strong_password
DB_CHARSET=utf8mb4

# --- OpenAI Responses API ---
OPENAI_MODEL=gpt-4o-mini
OPENAI_ENDPOINT=https://api.openai.com/v1/responses
OPENAI_TEMPERATURE=0.1
# OPENAI_API_KEY 는 시스템 환경변수로 설정 권장 (예: Apache SetEnv 또는 OS 환경)
# export OPENAI_API_KEY="sk-xxxxxxxx"

# --- Limits / Safety ---
MAX_SCHEMA_TABLES=30
SAMPLE_ROWS_PER_TBL=0
AUTO_LIMIT_DEFAULT=200
EXECUTION_ENABLED=false

# --- Logs / Cache ---
LOG_DIR=/var/log/nl2sql
SCHEMA_CACHE_DIR=/var/cache/nl2sql
SCHEMA_CACHE_TTL=3600

# --- UI ---
APP_TITLE="자연어 → SQL 생성기 (MariaDB + OpenAI)"
